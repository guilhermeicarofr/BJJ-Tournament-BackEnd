{
  "name": "bjj-tournament",
  "version": "1.0.0",
  "description": "A web service to create, manage and register BJJ athletes to tournaments",
  "main": "./dist/index.js",
  "scripts": {
    "launch:dev": "npm run dev:migration:generate && npm run dev",
    "launch:prod": "npm run prod:migration:generate && npm run prod",
    "prod": "NODE_ENV=prod npx tsc && node ./dist/index.js",
    "prod:load-envs": "dotenv -e .env.prod",
    "prod:migration:apply": "npm run prod:load-envs prisma migrate deploy",
    "prod:migration:generate": "npm run prod:load-envs prisma migrate dev",
    "dev": "NODE_ENV=development nodemon ./src/index.ts",
    "dev:load-envs": "dotenv -e .env.development",
    "dev:migration:apply": "npm run dev:load-envs prisma migrate deploy",
    "dev:migration:generate": "npm run dev:load-envs prisma migrate dev",
    "dev:seed": "npm run dev:load-envs prisma db seed",
    "test": "NODE_ENV=test jest --passWithNoTests --runInBand",
    "test:load-envs": "dotenv -e .env.test",
    "test:watch": "jest --watch --passWithNoTests --runInBand",
    "test:coverage": "NODE_ENV=test jest --passWithNoTests --runInBand --coverage --collectCoverageFrom='./src/**'",
    "test:migration:apply": "npm run test:load-envs prisma migrate deploy",
    "test:migration:generate": "npm run test:load-envs prisma migrate dev",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guilhermeicarofr/BJJ-Tournament.git"
  },
  "keywords": [
    "BJJ",
    "sports",
    "Jiu-Jitsu",
    "tournament",
    "registration",
    "back-end",
    "nodejs",
    "express",
    "jest"
  ],
  "author": "guilhermeicarofr",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/guilhermeicarofr/BJJ-Tournament/issues"
  },
  "homepage": "https://github.com/guilhermeicarofr/BJJ-Tournament#readme",
  "dependencies": {
    "@prisma/client": "^4.9.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^10.0.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "http-status": "^1.6.2",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.8.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.34",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "dotenv-cli": "^7.0.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-boundaries": "^3.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.4.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "prisma": "^4.9.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "prisma": {
    "seed": "npm run dev:load-envs -- ts-node prisma/seed.ts"
  }
}
